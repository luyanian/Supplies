<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_white"
    tools:context="cn.soft_x.supplies.activity.SettingActivity"
    >

    <LinearLayout
        android:id="@+id/setting_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dpi_40"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            />

        <TextView
            android:id="@+id/setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dpi_60"
            android:layout_marginTop="@dimen/dpi_10"
            android:text="版本号:2.2.2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/setting_ll"
        android:divider="@drawable/dividers"
        android:dividerPadding="@dimen/dpi_10"
        android:orientation="vertical"
        android:showDividers="middle|end"
        >

        <TextView
            android:id="@+id/change_phone"
            style="@style/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="更换手机号"
            />

        <TextView
            android:id="@+id/change_pwd"
            style="@style/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="修改密码"
            />

        <TextView
            android:id="@+id/common_problem"
            style="@style/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="常见问题"
            />

        <TextView
            android:id="@+id/about_us"
            style="@style/tv_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="关于我们"
            />
    </LinearLayout>

    <Button
        android:id="@+id/setting_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpi_40"
        android:layout_below="@id/setting_ll_1"
        android:layout_marginLeft="@dimen/dpi_40"
        android:layout_marginRight="@dimen/dpi_40"
        android:layout_marginTop="@dimen/dpi_60"
        android:background="@drawable/bg_yellow_btn"
        android:text="退出登录"
        android:textColor="@color/color_app_white"
        android:textSize="20sp"
        />


</RelativeLayout>
