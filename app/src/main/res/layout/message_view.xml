<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/message_root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dpi_35"
                android:background="@color/color_app_white"
    >

    <TextView
        android:id="@+id/message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dpi_5"
        android:layout_marginTop="@dimen/dpi_5"
        android:text="系统消息"
        android:textColor="@color/color_message_view_gray"
        />

    <ImageView
        android:visibility="gone"
        android:layout_marginLeft="@dimen/dpi_2"
        android:id="@+id/message_dot"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@id/message_tv"
        android:layout_toRightOf="@id/message_tv"
        android:background="@drawable/bg_message_dot"

        />
</RelativeLayout>