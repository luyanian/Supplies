<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    </style>

    <style name="TranslucentTheme" parent="AppTheme">
    </style>

    <style name="text_style_white">
        <item name="android:textColor">@color/color_app_white</item>
    </style>

    <style name="ed_style_white">
        <item name="android:paddingLeft">@dimen/dpi_5</item>
        <item name="android:textColor">@color/color_register_gray</item>
        <item name="android:textColorHint">@color/color_register_gray</item>
        <item name="android:background">@drawable/bg_white_ed</item>
        <item name="android:layout_marginLeft">@dimen/dpi_15</item>
        <item name="android:layout_marginRight">@dimen/dpi_15</item>
        <item name="android:layout_marginTop">@dimen/dpi_20</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="checkBox1">
        <item name="android:layout_marginLeft">@dimen/dpi_5</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/bg_checkbox</item>
        <item name="android:textColor">@color/color_register_gray</item>
    </style>

    <style name="tv_home">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_app_white</item>
    </style>

    <style name="tv_home_1">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/color_app_white</item>
    </style>

    <style name="tv_setting">
        <item name="android:drawableRight">@drawable/icon_right_arrow</item>
        <item name="android:textColor">@color/color_setting_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/dpi_20</item>
        <item name="android:layout_marginRight">@dimen/dpi_20</item>
        <item name="android:drawablePadding">@dimen/dpi_10</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="push_style">
        <item name="android:hint">@string/style_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_alias">
        <item name="android:hint">@string/alias_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="push_tag">
        <item name="android:hint">@string/tag_hint</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WarpLinearLayoutDefault">
        <item name="grivate">left</item>
        <item name="horizontal_Space">20dp</item>
        <item name="vertical_Space">20dp</item>
        <item name="isFull">false</item>
    </style>
</resources>
